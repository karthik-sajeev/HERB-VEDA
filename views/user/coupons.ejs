<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Coupons</title>
</head>
<body>

  <h1>Available Coupons</h1>

  <div id="coupons-container">
    <% coupons.forEach(function(coupon) { %>
      <div class="coupon">
        <p><strong>Code:</strong> <%= coupon.code %></p>
        <p><strong>Discount:</strong> <%= coupon.discount %>%</p>
        <p><strong>Expiry Date:</strong> <%= coupon.expiryDate.toDateString() %></p>
        <button class="apply-coupon-btn" data-coupon="<%= coupon.code %>">Apply Coupon</button>
      </div>
    <% }); %>
  </div>

  <div id="cart-summary">
    <h3>Cart Summary</h3>
    <p>Total Amount: <span id="total-amount">1000</span></p>
    <p>Discount Applied: <span id="discount-amount">0</span></p>
    <p>Amount After Discount: <span id="total-after-discount">1000</span></p>
  </div>

  <script src="/js/app.js"></script>
</body>
</html>
