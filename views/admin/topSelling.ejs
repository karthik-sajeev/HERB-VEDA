<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Top Selling Products, Categories, and Brands</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .card {
            margin-bottom: 1.5rem;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }
        .card-header {
            background-color: #007bff;
            color: white;
            font-weight: bold;
            font-size: 1.2rem;
        }
        .card-body {
            padding: 1rem;
        }
        .list-group-item {
            display: flex;
            justify-content: space-between;
            font-size: 1rem;
            padding: 10px 15px;
        }
        .list-group-item span {
            font-weight: bold;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <div class="row">
            <!-- Top Selling Products -->
            <div class="col-md-4">
                <div class="card">
                    <div class="card-header">
                        Top Selling Products
                    </div>
                    <div class="card-body">
                        <ul class="list-group">
                            <% topSellingProducts.forEach(function(product) { %>
                                <li class="list-group-item">
                                    <span><%= product.product %></span>
                                    <span><%= product.totalSold %> sold</span>
                                </li>
                            <% }); %>
                        </ul>
                    </div>
                </div>
            </div>

            <!-- Top Selling Categories -->
            <div class="col-md-4">
                <div class="card">
                    <div class="card-header">
                        Top Selling Categories
                    </div>
                    <div class="card-body">
                        <ul class="list-group">
                            <% topSellingCategories.forEach(function(category) { %>
                                <li class="list-group-item">
                                    <span><%= category.category %></span>
                                    <span><%= category.totalSold %> sold</span>
                                </li>
                            <% }); %>
                        </ul>
                    </div>
                </div>
            </div>

            <!-- Top Selling Brands -->
            <div class="col-md-4">
                <div class="card">
                    <div class="card-header">
                        Top Selling Brands
                    </div>
                    <div class="card-body">
                        <ul class="list-group">
                            <% topSellingBrands.forEach(function(brand) { %>
                                <li class="list-group-item">
                                    <span><%= brand.brand %></span>
                                    <span><%= brand.totalSold %> sold</span>
                                </li>
                            <% }); %>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
